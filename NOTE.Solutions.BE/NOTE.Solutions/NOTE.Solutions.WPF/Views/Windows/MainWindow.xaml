<Window x:Class="NOTE.Solutions.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:vm="clr-namespace:NOTE.Solutions.WPF.ViewModels"
        Title="MainWindow"
        Height="1080"
        Width="1920"
        FlowDirection="RightToLeft"
        WindowState="Maximized">

    <Grid>

        <!-- Sidebar -->
        <StackPanel Margin="0,66,0,0" Background="#FF33334C" HorizontalAlignment="Left" Width="200">

            <!-- الرئيسية -->
            <telerik:RadButton Height="50" Margin="0,5,0,0"
                               Command="{Binding NavigateCommand}"
                               CommandParameter="Home"
                               Style="{StaticResource menubtn}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="Icons/home.png" Width="24" Height="24"/>
                    <TextBlock Text="الرئيسية" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </telerik:RadButton>

            <!-- المنتجات -->
            <telerik:RadButton Height="50" Margin="0,5,0,0"
                               Command="{Binding ToggleStackCommand}"
                               CommandParameter="Products"
                               Style="{StaticResource menubtn}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="Icons/products.png" Width="24" Height="24"/>
                    <TextBlock Text="المنتجات" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </telerik:RadButton>

            <StackPanel Background="#FF0087C4"
                        Visibility="{Binding ProductsStackVisibility}">
                <telerik:RadButton Content="قائمة المنتجات"
                                   Style="{StaticResource stackbtn}"
                                   Height="35"
                                   Command="{Binding NavigateCommand}"
                                   CommandParameter="ItemsControl"/>
                <telerik:RadButton Content="اضافة منتج جديد"
                                   Style="{StaticResource stackbtn}"
                                   Height="35"
                                   Command="{Binding NavigateCommand}"
                                   CommandParameter="NewProductControl"/>
            </StackPanel>

            <!-- العملاء -->
            <telerik:RadButton Height="50" Margin="0,5,0,0"
                               Command="{Binding ToggleStackCommand}"
                               CommandParameter="Customers"
                               Style="{StaticResource menubtn}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="Icons/customers.png" Width="24" Height="24"/>
                    <TextBlock Text="العملاء" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </telerik:RadButton>

            <StackPanel Background="#FF0087C4"
                        Visibility="{Binding CustomersStackVisibility}">
                <telerik:RadButton Content="قائمة العملاء"
                                   Style="{StaticResource stackbtn}"
                                   Height="35"
                                   Command="{Binding NavigateCommand}"
                                   CommandParameter="CustomersControl"/>
                <telerik:RadButton Content="اضافة عميل جديد"
                                   Style="{StaticResource stackbtn}"
                                   Height="35"
                                   Command="{Binding NavigateCommand}"
                                   CommandParameter="NewCustomerControl"/>
            </StackPanel>

            <!-- الايصالات -->
            <telerik:RadButton Height="50" Margin="0,5,0,0"
                               Command="{Binding ToggleStackCommand}"
                               CommandParameter="Receipts"
                               Style="{StaticResource menubtn}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="Icons/receipts.png" Width="24" Height="24"/>
                    <TextBlock Text="الإيصالات" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </telerik:RadButton>

            <StackPanel Background="#FF0087C4"
                        Visibility="{Binding ReceiptsStackVisibility}">
                <telerik:RadButton Content="قائمة الايصالات"
                                   Style="{StaticResource stackbtn}"
                                   Height="35"
                                   Command="{Binding NavigateCommand}"
                                   CommandParameter="ReceiptsControl"/>
                <telerik:RadButton Content="انشاء ايصال"
                                   Style="{StaticResource stackbtn}"
                                   Height="35"
                                   Command="{Binding NavigateCommand}"
                                   CommandParameter="NewReceipt"/>
            </StackPanel>

            <!-- الاعدادات -->
        </StackPanel>
        <!-- Top Bar -->
        <Grid Height="66" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <!-- Company logo + name -->
                <ColumnDefinition Width="200" />
                <!-- Page title -->
                <ColumnDefinition Width="*" />
                <!-- Account dropdown -->
                <ColumnDefinition Width="250" />
            </Grid.ColumnDefinitions>

            <!-- Company logo + name with different background -->
            <Border Grid.Column="0" Background="#FF005A9E" Height="66">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Image Source="/Assets/Images/logo1.png" Width="40" Height="40"/>
                    <TextBlock Text="NOTE Solutions" FontFamily="Dubai" FontSize="18" FontWeight="Bold" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Page Title -->
            <Grid Grid.Column="1" Background="#FF0087C4">
                <Label Content="{Binding CurrentTitle}" VerticalAlignment="Center"
               FontSize="22" FontFamily="Dubai" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
            </Grid>

            <!-- Account Dropdown -->
            <Grid Grid.Column="2" Background="#FF0087C4">
                <Menu HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
              Background="Transparent" BorderBrush="{x:Null}">
                    <MenuItem>
                        <MenuItem.Header>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="{Binding LoggedUserEmail}" Foreground="White" FontFamily="Dubai" FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text=" ▼" Foreground="White" FontFamily="Dubai" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </MenuItem.Header>

                        <MenuItem Header="Account" Command="{Binding NavigateCommand}" CommandParameter="AccountControl"/>
                        <MenuItem Header="Logout" Command="{Binding LogoutCommand}" />
                    </MenuItem>
                </Menu>
            </Grid>
        </Grid>

        <!-- Content Frame -->
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"
               Grid.ColumnSpan="2"
               Margin="200,66,0,0"
               Content="{Binding CurrentPage}"/>
    </Grid>
</Window>
